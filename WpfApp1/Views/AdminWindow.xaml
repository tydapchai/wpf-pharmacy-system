<Window x:Class="WpfApp1.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pharmacy Store - Admin Panel" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        MinWidth="800" MinHeight="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ¥ Pharmacy Store - Admin Panel" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Manage products and inventory" 
                               FontSize="14" 
                               Foreground="#E3F2FD"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Welcome, " 
                               FontSize="14" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentAccount.Username}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Content="Logout" 
                            Margin="20,0,0,0"
                            Padding="15,5"
                            Background="Transparent"
                            BorderBrush="White"
                            BorderThickness="1"
                            Foreground="White"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Products List -->
            <Border BorderBrush="#E0E0E0" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Products Header -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Products" 
                                           FontSize="18" 
                                           FontWeight="Bold"/>
                                <!-- Thanh tÃ¬m kiáº¿m -->
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBox x:Name="SearchTextBox" Width="200" Height="28" Margin="0,0,8,0" VerticalAlignment="Center" ToolTip="Nháº­p tÃªn sáº£n pháº©m Ä‘á»ƒ tÃ¬m kiáº¿m"/>
                                    <Button Content="TÃ¬m kiáº¿m" Width="80" Height="33" Click="SearchButton_Click"/>
                                </StackPanel>
                            </StackPanel>

                            <Button 
                                    Content="Add New Product" 
                                    Click="Button_Click"
                                    MinWidth="120" Margin="642,32,37,0"/>
                        </Grid>
                    </Border>

                    <!-- Products DataGrid -->
                    <DataGrid Grid.Row="1" 
                              x:Name="ProductsDataGrid"
                              ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="60"/>
                            <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer}" Width="120"/>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" 
                                                    Margin="2" 
                                                    Padding="6,3"
                                                    Click="EditProduct_Click"
                                                    Tag="{Binding}" />
                                            <Button Content="Delete" 
                                                    Margin="2" 
                                                    Padding="6,3"
                                                    Background="Red"
                                                    Click="DeleteProduct_Click"
                                                    Tag="{Binding}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 