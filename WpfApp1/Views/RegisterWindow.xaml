<Window x:Class="WpfApp1.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pharmacy Store - Register" Height="800" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8F5E8" Offset="0"/>
            <GradientStop Color="#C8E6C9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,30,20,20">
            <TextBlock Text="ðŸ¥ Pharmacy Store" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#2E7D32"/>
            <TextBlock Text="Create your account" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Foreground="#666"/>
        </StackPanel>

        <!-- Register Form -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="350"
                        Margin="20">
                
                <TextBlock Text="Full Name" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"
                           Foreground="#333"/>
                <TextBox x:Name="FullNameTextBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10,5"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Username" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5"
                           Foreground="#333"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10,5"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Email" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5"
                           Foreground="#333"/>
                <TextBox x:Name="EmailTextBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10,5"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Password" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5"
                           Foreground="#333"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="40" 
                             FontSize="14"
                             Padding="10,5"
                             BorderBrush="#BDBDBD"
                             BorderThickness="1"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Confirm Password" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5"
                           Foreground="#333"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Height="40" 
                             FontSize="14"
                             Padding="10,5"
                             BorderBrush="#BDBDBD"
                             BorderThickness="1"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           FontSize="12"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="Register" 
                        Height="45" 
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#2E7D32"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,30,0,0"
                        Command="{Binding RegisterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1B5E20"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    Margin="20">
            <TextBlock Text="Already have an account? Login here" 
                       Foreground="#2E7D32" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       MouseLeftButtonDown="Login_Click">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window> 